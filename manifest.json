{
    "name": "Snap-Deck",
    "version": "2.0.0",
    "manifest_version": 2,
    "description": "Extension to take ScreenShot Notes",
    "icons": {
        "32": "/logo/logo32.png"
    },
    "web_accessible_resources": ["/note.html"],
    "content_scripts": [{
        "matches": [
            "https://*/*",
            "http://*/*"
        ],
        "js": ["/content-script.js"]
    }],
    "browser_action":{
    },
    "background": {
        "scripts": ["/background.js"]
    },
    "permissions": [
        "activeTab",
        "tabs"
    ]
}