{
    "name": "Snap-Deck",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "Extension to take ScreenShot Notes",
    "icons": {
        "32": "/logo/logo32.png",
        "500": "/logo/sd logo.png"
    },
    "web_accessible_resources": [
        "/SideBar/SideBar.html",
        "/SideBar/script.js",
        "/SideBar/dist/html2pdf.bundle.js",
        "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css",
        "https://www.w3schools.com/w3css/4/w3.css",
        "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css",
        "https://www.w3schools.com/w3css/4/w3.css"

    ],
    "content_scripts": [{
        "matches": [
            "https://*/*",
            "http://*/*"
        ],
        "js": ["/content-script.js"]
    }],
    "browser_action":{
    },
    "background": {
        "scripts": ["/background.js"]
    },
    "permissions": [
        "activeTab",
        "tabs",
        "desktopCapture"
    ]
}